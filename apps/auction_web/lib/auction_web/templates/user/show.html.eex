<h1>User details</h1>

<dl>
  <dt>Username</dt>
  <dd><%= @user.username %></dd>
  <dt>Email address</dt>
  <dd><%= @user.email %></dd>
</dl>
<hr>
<h2>Current Bids</h2>
<%= for bid <- @bids do %>
  <p>
    <strong><%= formatted_datetime(bid.inserted_at) %></strong>
    --
    <strong><%= integer_to_currency(bid.amount) %></strong>
    for <%= link bid.item.title, to: Routes.item_path(@conn, :show, bid.item) %>
  </p>
<% end %>
